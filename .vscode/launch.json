    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask: Run Application",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "console": "integratedTerminal",
            "justMyCode": true,
            "jinja": true,
            "args": [
                "run",
                "--no-reload",
                "--no-debugger"
            ]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}